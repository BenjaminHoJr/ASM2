@model WebApplication1.Models.Region

<h2>Delete Region</h2>

<h4>Are you sure you want to delete this region?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Region Name</dt>
        <dd class="col-sm-10">@Model.regionName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.regionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    @Html.AntiForgeryToken()
</form>
