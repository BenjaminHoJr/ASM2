@model WebApplication1.Models.Region

<h2>Edit Region</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="regionId" />

    <div class="form-group">
        <label asp-for="regionName" class="control-label"></label>
        <input asp-for="regionName" class="form-control" />
        <span asp-validation-for="regionName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

    @Html.AntiForgeryToken()
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
