@{
    ViewData["Title"] = "Database Overview";
    var users = ViewBag.Users as List<WebApplication1.Models.User>;
    var gameLevels = ViewBag.GameLevels as List<WebApplication1.Models.GameLevel>;
    var regions = ViewBag.Regions as List<WebApplication1.Models.Region>;
    var questions = ViewBag.Questions as List<WebApplication1.Models.Question>;
    var roles = ViewBag.Roles as List<WebApplication1.Models.Role>;
    var gameResults = ViewBag.GameResults as List<WebApplication1.Models.GameResult>;
}

<div class="container">
    <h1>Database Overview</h1>

    <!-- Users Table -->
    <h2>Users</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (users != null)
            {
                foreach (var user in users)
                {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
            </tr>
                }
            }
        </tbody>
    </table>

    <!-- Game Levels Table -->
    <h2>Game Levels</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Level ID</th>
                <th>Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (gameLevels != null)
            {
                foreach (var level in gameLevels)
                {
            <tr>
                <td>@level.LevelId</td>
                <td>@level.title</td>
                <td>@level.Description</td>
            </tr>
                }
            }
        </tbody>
    </table>

    <!-- Regions Table -->
    <h2>Regions</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Region ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (regions != null)
            {
                foreach (var region in regions)
                {
            <tr>
                <td>@region.RegionId</td>
                <td>@region.Name</td>
            </tr>
                }
            }
        </tbody>
    </table>

    <!-- Questions Table -->
    <h2>Questions</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Question ID</th>
                <th>Content</th>
                <th>Answer</th>
                <th>Level ID</th>
            </tr>
        </thead>
        <tbody>
            @if (questions != null)
            {
                foreach (var question in questions)
                {
            <tr>
                <td>@question.QuestionId</td>
                <td>@question.ContentQuestion</td>
                <td>@question.Answer</td>
                <td>@question.LevelId</td>
            </tr>
                }
            }
        </tbody>
    </table>

    <!-- Roles Table -->
    <h2>Roles</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Role ID</th>
                <th>Role Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (roles != null)
            {
                foreach (var role in roles)
                {
            <tr>
                <td>@role.RoleId</td>
                <td>@role.RoleName</td>
                <td>@role.Description</td>
            </tr>
                }
            }
        </tbody>
    </table>

    <!-- Game Results Table -->
    <h2>Game Results</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Result ID</th>
                <th>User ID</th>
                <th>Level ID</th>
                <th>Score</th>
                <th>Completed At</th>
            </tr>
        </thead>
        <tbody>
            @if (gameResults != null)
            {
                foreach (var result in gameResults)
                {
            <tr>
                <td>@result.ResultId</td>
                <td>@result.UserId</td>
                <td>@result.LevelId</td>
                <td>@result.Score</td>
                <td>@result.CompletedAt.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>