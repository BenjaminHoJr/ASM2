@model IEnumerable<WebApplication1.Controllers.ShopController.ShopItemVm>

@{
    ViewData["Title"] = "Shop";
}

<div class="d-flex align-items-center mb-3">
    <h1 class="me-3 mb-0">Shop</h1>
    <span class="text-muted">(demo dữ liệu tĩnh)</span>
</div>

<div class="row row-cols-1 row-cols-md-3 g-3">
@foreach (var item in Model)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title mb-0">@item.Name</h5>
                    <span class="badge bg-secondary">@item.Category</span>
                </div>
                <p class="card-text text-muted">@item.Description</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-primary">@item.XpCost XP</span>
                    <button class="btn btn-sm btn-success" type="button" onclick="buyItem('@item.Id','@item.Name', @item.XpCost)">Mua</button>
                </div>
            </div>
        </div>
    </div>
}
</div>

<script>
    function buyItem(id, name, cost) {
        alert(`(demo) Bạn đã mua ${name} với giá ${cost} XP.`);
    }
</script>
